<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorTextLight</item>
    </style>

    <style name="Button" parent="ThemeOverlay.AppCompat">
        <item name="android:background">@drawable/shape_button_main</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textColor">@color/buttonTextDark</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Button.TextButton">
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/buttonTextLight</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="EditText">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/colorEditTextHint</item>
        <item name="android:textColorHint">@color/colorEditTextHint</item>
        <item name="android:background">@drawable/shape_edit_text</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>